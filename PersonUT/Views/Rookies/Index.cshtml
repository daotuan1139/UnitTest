@{
    ViewData["Title"] = "Assignment";
    //Layout = "~/PersonUT/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Core_MVC.Models.Person>

<div class="text-center">
    <center>
        <h3>List years</h3>
        <br />
        <div>
            <p>
                @Html.ActionLink("Create", "Create","Rookies")
            </p>
        </div>
        <table class="table">
            <form asp-controller="Rookies" asp-action="Index" method="post"> 
                <tr>
                    <th>
                         @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Gender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DateOfBirth)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.BirthPlace)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Age)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsGradated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th></th>

                </tr>
            </form>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName) </td>
                    <td>
                        @((bool)item.Gender ? "Male" : "Female")</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateOfBirth) </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone) </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BirthPlace) </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Age) </td>
                    <td>
                        @((bool)item.IsGradated ? "Yes" : "No")</td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { email=item.Email }) |
                        @Html.ActionLink("Detail", "Detail", new { email=item.Email }) |
                        @* @Html.ActionLink("Xóa", "Delete", new { email=item.Email }) *@
                        @* <a asp-action="Edit" asp-route-id="@item.Email">Edit</a>
                        <a asp-action="Detail" asp-route-id="@item.Email">Detail</a>
                        <a asp-action="Delete" asp-route-id="@item.Email">Delete</a> *@
                    </td>
                </tr>
            }

        </table>

    </center>
</div>